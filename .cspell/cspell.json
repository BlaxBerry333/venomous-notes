{
  "ignorePaths": [
    "**/node_modules/**",
    "**/dist/**",
    "**/.next/**",
    "**/.vscode/**",
    "**/.git/**",
    "**/.DS_Store/**",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/__snapshots__/**",
    "**/coverage/**",
    "**/reports/**",
    "**/logs/**",
    "**/temp/**",
    "**/temp_*/**",
    "**/src/generated/prisma/**"
  ],

  "dictionaries": ["custom-words"],
  "dictionaryDefinitions": [
    {
      "name": "custom-words",
      "path": "./custom-words.txt",
      "addWords": true
    }
  ]
}
